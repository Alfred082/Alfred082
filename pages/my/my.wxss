/* pages/my/my.wxss */
page {
  background: #f5f5f5;
}
.add_group {
  position: absolute;
  top: 280rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 650rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.user_avatar {
  overflow: hidden;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  border: 4rpx solid #3b82c5;
  margin-right: 20rpx;
}

.group_info {
  width: 500rpx;
  display: flex;
  flex-direction: column;
}

.group_name {
  font-size: 40rpx;
  font-weight: bold;
  color: #3b82c5;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.group_detail {
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.group__days {
  font-size: 28rpx;
  color: #4faf70;
}

.group__days text {
  width: 60rpx;
  height: 80rpx;
  padding: 4rpx 8rpx;
  color: #fff;
  background: #3b82c5;
  border-radius: 4rpx;
}

.group__tag {
  color: #808080;
  border-bottom: 2rpx solid #808080;
}

/* 轮播图样式 */
swiper{
  width: 100%;
  height: 350rpx;
}
image{
  width: 100%;
  height: 350rpx;
}